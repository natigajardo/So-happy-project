
<%= form_with(model: product_instance, local: true) do |form| %>
  <% if product_instance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product_instance.errors.count, "error") %> prohibited this product_instance from being saved:</h2>

      <ul>
      <% product_instance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field pt-2">
    <%= form.label :product_id %>
    <%= form.select :product_id, Product.all.collect{|p| [p.name, p.id]}, {}, id: :product_instance_product_id, include_blank: false %>
  </div>

  <div class="field">
    <%= form.label :size %>
    <%= form.text_field :size, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div class="field">
    <input type="text" name="stock" class="form-control" />
  </div>

  <div class="field">
    <%= form.label :sold %>
    <%= form.check_box :sold%>
  </div>

  <div class="actions pt-2">
    <%= form.submit %>
  </div>
<% end %>

<div class="container">
<h2 class="pb-3">Inicio sesi√≥n</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, class: "form-control pt-2" %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password, class: "form-control" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field pt-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions pt-2">
      <%= f.submit "Log in", class: "btn btn-info float-right" %>
    </div>
  <% end %> 

<%= render "devise/shared/links" %>
</div>

<div class="pt-4">

  <div class="container">
    <div class="row">

      <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="img-product-show">

        
          <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <% @product.images.each_with_index do |image, index| %>
              <div class="carousel-item item <%= index == 0 ? 'active' : '' %>">  
                  <%= image_tag image.variant(resize: "400x400").processed, class: "d-block w-100" %>      
              </div>
              <% end %>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a> 
          </div>
    
        </div>  
      </div>

      <div class="col-sm-12 col-md-6 col-lg-6 col-xl-6">
        <div class="ficha-product-datos">
          <div>
            <strong>Name:</strong>
            <p><%= @product.name %></p>
          </div>

          <div>
            <strong>Description:</strong>
            <p><%= @product.description %></p>
          </div>

          <div>
            <strong>Autor:</strong>
            <p><%= @product.author %></p>
          </div>

          <div>
            <strong>Descripcion</strong>
            <p><%= @product.description %></p>
          </div>

          <div>
            <strong>Tama√±o</strong>
            <% @product.product_instances.each do |p|%>
            <p><%= p.size %></p>
            <strong>Precio: <%= number_to_currency p.price %> </strong>
            <% end %>
          </div>

          <div>
            <%=submit_tag "Agregar al carrito", data: { confirm: "Are you sure?" }, class: "btn btn-info"%>
          </div>

        </div>
      </div>  

    </div>
  </div>

  <%= link_to 'Back', products_path, class: "btn btn-info ml-5 mt-2" %>
</div>
